<project name="Frisbeebutik.dk">
    <description>
		-
    </description>

	<property name="project.build.root" value="c:\checkout\frisbeebutik.dk"/>

	<!-- subversion settings -->
	<property name="svnant.dir" value="C:\Program Files\eclipse\plugins\svnant-1.1.0-RC2\lib\"/>

	<property name="svn.projecturl" value="http://svn.intraface.dk/campsommer/trunk"/>
	<property name="svn.username" value="lsolesen"/>
	<property name="svn.password" value="klani"/>
	<property name="svn.revision" value="HEAD"/>
	<property name="svn.javahl" value="true"/>

	<!-- setting up subversion -->
	<path id="svnant.classpath">
		<fileset dir="${svnant.dir}">
			<include name="*.jar" />
		</fileset>
	</path>

	<typedef resource="org/tigris/subversion/svnant/svnantlib.xml" classpathref="svnant.classpath" />

	<target name="setUp">
		<delete dir="${project.build.root}\"/>
	</target>

	<target name="svnExport">

		<svn javahl="${svn.javahl}" username="${svn.user}" password="${svn.password}">
			<export revision="HEAD" srcUrl="${svn.projecturl}" destPath="${project.build.root}" />
		</svn>
	</target>

	<target name="tearDown">
		<delete dir="${project.build.root}\"/>
	</target>

</project>